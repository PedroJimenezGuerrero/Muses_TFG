{
    "name": "Muses TFG (Direct Image)",
    // Usamos la imagen directamente. Docker solo la descarga (300MB), NO construye nada.
    "image": "mcr.microsoft.com/devcontainers/java:1-21-bullseye",
    
    "features": {
        // Instalamos Node via feature (ahora que tenemos overlay2 arreglado, deber√≠a aguantar)
        "ghcr.io/devcontainers/features/node:1": {
            "version": "lts",
            "pnpm": "none",
            "yarn": "none"
        }
    },

    "customizations": {
        "vscode": {
            "extensions": [
                "vscjava.vscode-java-pack",
                "vmware.vscode-spring-boot",
                "dbaeumer.vscode-eslint",
                "esbenp.prettier-vscode",
                "eamodio.gitlens",
                "vivaxy.vscode-conventional-commits",
                "codezombiech.gitignore"
            ]
        }
    },
    
    "forwardPorts": [8080, 3000],
    "postCreateCommand": "npm install && echo 'Entorno listo'"
}